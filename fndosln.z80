
;[]==========================================================[]
DOSline
	SUB	A
	LD	(HistCurrent),A
	LD	C,Dss.ScanKey
	RST	#10
	BIT	4,B
	JR	Z,DOSln0
	LD	A,D
	AND	#7F
	CP	#02
	JR	C,DOSlnEx
	CP	#0E
	JP	C,QSearch
	CP	#10
	JR	C,DOSlnEx
	CP	#1A
	JP	C,QSearch
	CP	#1D
	JR	C,DOSlnEx
	CP	#26
	JP	C,QSearch
	CP	#2A
	JR	C,DOSlnEx
	CP	#31
	JP	C,QSearch
	JR	DOSlnEx
DOSln0	LD	A,E
	CP	#0D
	JP	Z,RunDOSline
	CP	#1B
	JP	Z,ClrDOSln1
	CP	#21
	JR	NC,DOSloop
	CP	#20
	JR	NZ,DOSln1
	LD	A,(DOSslen)
	OR	A
	JR	NZ,DOSloop
	LD	C,Dss.ScanKey
	RST	#10
	JP	MarkFile
DOSln1	LD	A,D
	CP	#A8
	JR	Z,DOSloop
	CP	#9A
	JR	Z,DOSloop
	CP	#9B
	JR	Z,DOSloop
	CP	#92
	JR	Z,DOSloop
DOSlnEx	LD	C,Dss.ScanKey
	RST	#10
	RET 
DOSloop	SUB	A
	LD	(HistCurrent),A
	LD	IX,DOSstr
	LD	HL,DOSTab
	CALL	DOSInputLine
	RET	C
	JR	Z,RunDOSline
	LD	C,Dss.ScanKey
	RST	#10
	LD	A,E
	CP	#1B
	RET	NZ
	LD	A,(DOSslen)
	OR	A
	RET	Z
	CALL	ClrDOSline
	LD	C,#31
	RST	#10
	JR	DOSloop
;[]----------------------------------------------------------[]
ClrDOSln1
	LD	C,#31
	RST	#10
	LD	A,(DOSslen)
	OR	A
	JP	Z,ShowDOSscreen
ClrDOSline
	SUB	A
	LD	(HistCurrent),A
	LD	A,(DOSslen)
	OR	A
	RET	Z
	LD	HL,DOSinp
	SUB	A
	LD	B,#80
	LD	(HL),A
	INC	HL
	DJNZ	$-2
	LD	(DOSslen),A
	LD	(DOSposX),A
	LD	(DOSaddX),A
	CALL	MakeWindow
	DEFB	#80
	DEFB	#02	;Head place
	DEFW	#00FE,#00E5
	DEFW	#017C,#000A
	DEFB	PanelCol
	DEFB	#00
	RET 
;[]----------------------------------------------------------[]
RunDOSline
	LD	C,#31
	RST	#10
	LD	A,(DOSslen)
	OR	A
	JP	Z,OpenFile
	CALL	SaveDOSline
	LD	HL,DOSinp
	LD	A,(HL)
	CP	#20
	JP	Z,ClrDOSline
	LD	A,(DOSslen)
	LD	B,A
	LD	C,#00
	LD	A,#20
RunDLn0	CP	(HL)
	JR	Z,RunDLine
	INC	HL
	INC	C
	DJNZ	RunDLn0
RunDLine
	DEC	HL
	LD	A,"\\"
	CP	(HL)
	JP	NZ,RunDOSexe
	LD	HL,DOSinp
	LD	DE,WorkBuffer
	PUSH	DE
	LD	B,#00
	LDIR 
	SUB	A
	LD	(DE),A
	CALL	ClrDOSline
	POP	HL
	LD	A,(DOSinp+1)
	CP	":"
	JR	NZ,$+6
	LD	(IY+BegPath),#00
	CALL	NewDIRECTORY
	LD	A,(TreeFlag)
	OR	A
	RET	Z
	BIT	1,(IY+ViewFlg)
	RET	NZ
	PUSH	IY
	BIT	0,(IY+PanelFlg)
	LD	IY,LeftPanel
	LD	HL,RightPanel
	JR	NZ,$+9
	LD	IY,RightPanel
	LD	HL,LeftPanel
	LD	DE,BegPath
	ADD	HL,DE
	INC	HL
	INC	HL
	CALL	FindTreeDIR
	CALL	PrintDIR
	CALL	PrnFileInfo
	PUSH	IY
	POP	IX
	LD	DE,BegPBar
	ADD	IX,DE
	CALL	PrnVScrBar
	POP	IY
	RET 
RunDOSexe
	LD	HL,DOSinp
	DEC	HL
RunDE1	INC	HL
	LD	A,(HL)
	CP	#21
	JR	C,RunDOSexe1
	CP	"."
	JR	NZ,RunDE1
	INC	HL
	LD	A,(HL)
	RES	5,A
	CP	"F"
	JR	NZ,RunDOSexe1
	INC	HL
	LD	A,(HL)
	RES	5,A
	CP	"L"
	JR	NZ,RunDOSexe1
	INC	HL
	LD	A,(HL)
	RES	5,A
	CP	"X"
	JR	NZ,RunDOSexe1
	LD	HL,DOSinp
	LD	DE,WorkBuffer
	SUB	A
	LDI 
	CP	(HL)
	JR	NZ,$-3
	LD	(DE),A
	CALL	ClrDOSline
	CALL	RunFLEX
	CALL	C,DOSError
	RET 
RunDOSexe1
	ld	hl,WorkBuffer
	push	hl
	push	hl
	pop	de
	inc	de
	ld	bc,0100h
	ld	(hl),0
	ldir
	pop	de
	call	GetFileName
	jp	c,.error
	ld	hl,DOSinp
	call	SkipWord
	ld	a,(hl)
	and	a
	jr	z,.endOfLine
	dec	hl
	ld	de,WorkBuffer
	call	ConcatString
.endOfLine:
	ld	hl,WorkBuffer
	ld	de,WorkBuffer + 0100h
	ld	bc,0445h
	rst	10h
	jr	c,.error
	and	2
	jr	z,.unknown
	ld	hl,(WorkBuffer + 0100h)
	ld	de,5845h		;"EX"
	sbc	hl,de	
	jr	nz,.noExe
	ld	a,(WorkBuffer + 0102h)
	cp	"E"
	jr	nz,.noExe
.unknown:
	ld	hl,WorkBuffer
	ld	de,WorkBuffer + 0100h
	ld	bc,0100h
	ldir
	jr	.noBatch

.noExe:	ld	hl,ShellFile		;копируем путь к шеллу
	ld	de,WorkBuffer + 0100h
	call	CopyString
	ld	hl,WorkBuffer
	call	ConcatString
.noBatch:
	CALL	ResDrivers
	SUB	A
	CALL	ClearScreen
	CALL	ResVModeE
	LD	HL,BEGCOM
	EX	(SP),HL
	LD	HL,WorkBuffer + 0100h
	LD	BC,#0040
	RST	#10
	RET	NC
	PUSH	AF
	SUB	A
	OUT	(BORDER),A
	CALL	InitVMode
	CALL	InitDrivers
	CALL	InitScreen
	CALL	ClrDOSline
	SUB	A
	CALL	InitPanels
	POP	AF
.error:	CALL	DOSError
	LD	HL,ComLoop
	EX	(SP),HL
	RET
;вставка из буфера ввода ком.строки имени исполняемого файла
;если указан абсолютный путь к файлу с именем диска, то он копируется целиком
;если просто имя файла, то производится попытка поиска файла в каталоге текущей панели и подставляется его абсолютный путь, если нет, то просто имя файла
;de - буфер для имени файла
GetFileName:
	LD	A,(DOSinp + 1)		; в ком.строке указан абсолютный путь к файлу (с диском)
	CP	":"
	JR	nz,.panelSearch
.notFound:
	ld	de,DOSinp		;копируем буфер ком.строки в буфер
	ld	hl,(.str)
	ex	hl,de
	jp	CopyWord

.panelSearch:
	ex	hl,de
	ld	(.str),hl
	bit	0,(iy+PanelFlg)
	ld	hl,RightPanel + BegPath
	jr	nz,.next
	ld	hl,LeftPanel + BegPath
.next:	ld	de,WorkBuffer + 0100h
	call	CopyString
	ld	a,"\\"
	ld	(de),a
	inc	de
; Выделить имя файла из строки
	ld	hl,DOSinp		; откуда
;	ld	de,WorkBuffer		; куда
	ld	bc,0345h		; формат "file.ext"
	rst	10h
	ret	c			;имя файла не найдено
	bit	1,a
	jr	z,.noExt		;имя исполняемого файла указано с расширением, искать не нужно
	ld	hl,EndOfString
	jr	.found2

.noExt:	ld	hl,BATExtension
	call	PrepareFilename
	call	SearchFilename
	jr	nc,.found
	ld	hl,EXEExtension
.found2:
	call	PrepareFilename
	call	SearchFilename
	jr	c,.notFound

.found:	ld	hl,WorkBuffer+0200h
.found1:
	ld	de,0
.str:	equ	$-2
	jp	CopyString

;Подготовка имени файла для поиска
PrepareFilename:
	ld	de,WorkBuffer+0200h
	push	hl
	ld	hl,WorkBuffer + 0100h
	call	CopyString
	pop	hl
	jp	ConcatString

;поиск файла
SearchFilename:
	ld	hl,WorkBuffer+0200h	;поиск файла в каталоге текущей панели
	ld	de,WorkBuffer+0300h	
	ld	bc,0119h
	ld	a,FA_ARCH + FA_RDONLY
	rst	10h
	ret

