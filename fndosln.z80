SaveDOSline
	IN	A,(PAGE1)
	PUSH	AF
	LD	A,(HelpPg)
	OUT	(PAGE1),A
	LD	A,#C0
	OUT	(YPORT),A
	LD	IX,DOSstr
	LD	HL,(HistSpace)
	LD	C,(IX+#04)
	LD	B,#00
SavDOS0	OR	A
	SBC	HL,BC
	JR	C,$+4
	JR	NZ,SavDOS1
	LD	A,(HistCount)
	DEC	A
	LD	(HistCount),A
	PUSH	BC
	CALL	FindHistory
	POP	BC
	LD	DE,DOShistory+#200
	OR	A
	EX	DE,HL
	SBC	HL,DE
	JR	SavDOS0
SavDOS1	DEC	HL
	LD	(HistSpace),HL
	PUSH	BC
	LD	A,(HistCount)
	CALL	FindHistory
	LD	E,L
	LD	D,H
	ADD	HL,BC
	INC	HL
	EX	DE,HL
	PUSH	HL
	LD	BC,DOShistory
	OR	A
	SBC	HL,BC
	LD	C,L
	LD	B,H
	POP	HL
	LD	A,B
	OR	C
	JR	Z,$+6
	DEC	HL
	DEC	DE
	LDDR 
	POP	BC
	LD	HL,DOSinp
	LD	DE,DOShistory
	LD	A,C
	INC	A
	LD	(DE),A
	INC	DE
	LDIR 
	SUB	A
	LD	(HistCurrent),A
	POP	AF
	OUT	(PAGE1),A
	LD	HL,HistCount
	INC	(HL)
	RET 
GetDOShistory
	LD	IX,DOSstr
	LD	HL,HistCount
	LD	A,(HistCurrent)
	INC	(HL)
	DEC	(HL)
	JP	Z,ClrDOSline
	CP	(HL)
	RET	Z
	EX	AF,AF'
	IN	A,(PAGE1)
	PUSH	AF
	LD	A,(HelpPg)
	OUT	(PAGE1),A
	EX	AF,AF'
	PUSH	AF
	CALL	FindHistory
	LD	DE,DOSinp
	LD	A,(HL)
	INC	HL
	DEC	A
	LD	(IX+#04),A
	LD	(IX+#02),A
	LD	C,A
	LD	B,#00
	LDIR 
	SUB	A
	LD	(IX+#03),A
	POP	AF
	INC	A
	LD	(HistCurrent),A
	POP	AF
	OUT	(PAGE1),A
	RET 
FindHistory
	LD	HL,DOShistory
	OR	A
	RET	Z
	LD	B,A
	LD	D,#00
	LD	E,(HL)
	ADD	HL,DE
	DJNZ	$-2
	RET 
