ChASCIImode
	LD	HL,ViewerBegin
	EX	(SP),HL
	LD	A,(ASCIImode)
	XOR	#01
	LD	(ASCIImode),A
	RET	Z
	SUB	A
	LD	(ASCIIaddX),A
	RET 
