;[]==========================================================[]
SearchUp
	LD	B,#F0
	LD	A,D
	OR	E
	JR	NZ,SearchUpBeg
	LD	A,H
	OR	A
	JR	NZ,SearchUpBeg
	OR	L
	SCF 
	RET	Z
	LD	B,L
SearchUpBeg
	IN	A,(PAGE1)
	PUSH	AF
	PUSH	HL
	PUSH	DE
	LD	A,H		;Выделяем номер	страницы
	RLA 
	RL	E
	RLA 
	RL	E
	LD	D,high PagesList
	LD	A,(DE)		;Тек.страница
	OUT	(PAGE1),A
	RES	7,H
	SET	6,H
	LD	C,#00
	LD	LX,C

	INC	C
	DEC	B
	DEC	HL
	BIT	6,H
	JR	NZ,SrchUp0
	DEC	E
	LD	A,(DE)
	OUT	(PAGE1),A
	SET	6,H
SrchUp0	LD	A,(HL)
	CP	#0A
	JR	NZ,SrchUp1+1
	LD	A,B
	OR	A
	JR	Z,SrchUpEx
	INC	C
	DEC	B
	DEC	HL
	BIT	6,H
	JR	NZ,SrchUp1
	DEC	E
	LD	A,(DE)
	OUT	(PAGE1),A
	SET	6,H
SrchUp1	LD	A,(HL)
	CP	#0D
	JR	Z,SearchUpLp
	DEC	C
	INC	B
	INC	HL
	BIT	7,H
	JR	Z,SearchUpLp1
	INC	E
	LD	A,(DE)
	OUT	(PAGE1),A
	RES	7,H
	SET	6,H
	JR	SearchUpLp1
SearchUpLp
	LD	A,B
	OR	A
	JR	Z,SrchUpEx
SearchUpLp1
	DEC	HL
	BIT	6,H
	JR	NZ,SrchUp2
	DEC	E
	LD	A,(DE)
	OUT	(PAGE1),A
	SET	6,H
SrchUp2	LD	A,(HL)
	CP	#0A
	JR	Z,SrchUpEx
	CP	#0D
	JR	Z,SrchUpEx
	INC	LX
	INC	C
	DJNZ	SearchUpLp1
SrchUpEx
	POP	DE
	POP	HL
	LD	B,#00
	OR	A
	SBC	HL,BC
	LD	C,B
	EX	DE,HL
	SBC	HL,BC
	EX	DE,HL
	POP	AF
	OUT	(PAGE1),A
	LD	A,(ASCIImode)
	OR	A
	RET	NZ
	LD	A,LX
	CP	#51
	CCF 
	RET	NC
	LD	C,#50
SrchUpEx0
	ADD	HL,BC
	JR	NC,$+3
	INC	DE
	SUB	#50
	CP	#51
	JR	NC,SrchUpEx0
	OR	A
	RET 
;[]----------------------------------------------------------[]
SearchDown
	LD	(SrchHL+1),HL
	LD	(SrchDE+1),DE
	LD	A,(ASCIImode)
	OR	A
	LD	B,#50
	JR	Z,$+4
	LD	B,#F0
	PUSH	BC
	LD	C,L
	LD	B,H
	LD	HL,(FileLenght)
	OR	A
	SBC	HL,BC
	LD	C,E
	LD	B,D
	EX	DE,HL
	LD	HL,(FileLenght+2)
	SBC	HL,BC
	POP	BC
	RET	C
	JR	NZ,SearchDnBeg
	LD	A,D
	OR	A
	JR	NZ,SearchDnBeg
	OR	E
	SCF 
	RET	Z
	LD	B,E
SearchDnBeg
SrchHL	LD	HL,#0000
SrchDE	LD	DE,#0000
	IN	A,(PAGE1)
	PUSH	AF
	PUSH	HL
	PUSH	DE
	LD	A,H		;Выделяем номер	страницы
	RLA 
	RL	E
	RLA 
	RL	E
	LD	D,high PagesList
	LD	A,(DE)		;Тек.страница
	OUT	(PAGE1),A
	RES	7,H
	SET	6,H
	LD	C,#00
	DEC	HL
SearchDnLp
	INC	C
	INC	HL
	BIT	7,H
	JR	Z,SrchDn0
	INC	E
	LD	A,(DE)
	OUT	(PAGE1),A
	RES	7,H
	SET	6,H
SrchDn0	LD	A,(HL)
	CP	#0D
	JR	NZ,SrchE1
	INC	HL
	BIT	7,H
	JR	Z,SrchDn1
	INC	E
	LD	A,(DE)
	OUT	(PAGE1),A
	RES	7,H
	SET	6,H
SrchDn1	LD	A,(HL)
	CP	#0A
	JR	NZ,SrchEEx
	INC	C
	JR	SrchEEx

SrchE1	CP	#0A
	JR	Z,SrchEEx
	DJNZ	SearchDnLp

	INC	HL
	BIT	7,H
	JR	Z,SrchDnE
	INC	E
	LD	A,(DE)
	OUT	(PAGE1),A
	RES	7,H
	SET	6,H
SrchDnE	LD	A,(HL)
	CP	#0D
	JR	NZ,SrchEEx
	INC	C
	INC	HL
	BIT	7,H
	JR	Z,SrchDE1
	INC	E
	LD	A,(DE)
	OUT	(PAGE1),A
	RES	7,H
	SET	6,H
SrchDE1	LD	A,(HL)
	CP	#0A
	JR	NZ,SrchEEx
	INC	C
SrchEEx	POP	DE
	POP	HL
	LD	B,#00
	ADD	HL,BC
	LD	C,B
	EX	DE,HL
	ADC	HL,BC
	EX	DE,HL
	POP	AF
	OUT	(PAGE1),A
	OR	A
	RET 


