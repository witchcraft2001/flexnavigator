TLineDwnMs
	CALL	TLineDwn
	RET	C
	LD	B,#0A
TDnMs1	PUSH	BC
	LD	C,#03
	RST	#30
	POP	BC
	BIT	0,A
	RET	Z
	HALT 
	DJNZ	TDnMs1
TDnMs2	CALL	TLineDwn
	RET	C
	LD	C,#03
	RST	#30
	BIT	0,A
	RET	Z
	JR	TDnMs2
TLineDwn
	LD	HL,(NextShift)
	LD	DE,(NextShift+2)
	LD	BC,(FileLenght)
	OR	A
	SBC	HL,BC
	LD	BC,(FileLenght+2)
	EX	DE,HL
	SBC	HL,BC
	CCF 
	RET	C
	LD	HL,(FileShift)
	LD	DE,(FileShift+2)
	CALL	SearchDown
	LD	(FileShift),HL
	LD	(FileShift+2),DE
	LD	HL,(NextShift)
	LD	DE,(NextShift+2)
	LD	(TempShift),HL
	LD	(TempShift+2),DE
	CALL	ScrollSCRup
	LD	B,#DC
	CALL	PutASCIIline	    ;Создаем и печатаем	строку
	LD	HL,(TempShift)
	LD	DE,(TempShift+2)
	LD	(NextShift),HL
	LD	(NextShift+2),DE
	CALL	PrintVProc
	OR	A
	RET 
