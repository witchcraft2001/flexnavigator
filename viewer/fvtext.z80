TLineUpMs
	CALL	TLineUp
	RET	C
	LD	B,#0A
TUpMs1	PUSH	BC
	LD	C,#03
	RST	#30
	POP	BC
	BIT	0,A
	RET	Z
	HALT 
	DJNZ	TUpMs1
TUpMs2	CALL	TLineUp
	RET	C
	LD	C,#03
	RST	#30
	BIT	0,A
	RET	Z
	JR	TUpMs2
TLineUp
	LD	HL,(FileShift)
	LD	DE,(FileShift+2)
	LD	A,H
	OR	L
	OR	D
	OR	E
	SCF 
	RET	Z
	CALL	SearchUp
	LD	(FileShift),HL
	LD	(FileShift+2),DE
	LD	(TempShift),HL
	LD	(TempShift+2),DE
	LD	HL,EmptyLines
	LD	A,(HL)
	DEC	(HL)
	OR	A
	JR	NZ,TLineU1
	INC	(HL)
	LD	HL,(NextShift)
	LD	DE,(NextShift+2)
	CALL	SearchUp
	LD	(NextShift),HL
	LD	(NextShift+2),DE
TLineU1	CALL	ScrollSCRdown
	LD	B,#1C
	CALL	PutASCIIline	    ;Создаем и печатаем	строку
	CALL	PrintVProc
	OR	A
	RET 
