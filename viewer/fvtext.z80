
;[]---------------------------------------------------------[]
PrnASCIIpage
	LD	HL,PrintVProc
	PUSH	HL
	LD	HL,(FileShift)
	LD	(TempShift),HL
	LD	HL,(FileShift+2)
	LD	(TempShift+2),HL
	LD	B,#1C
PrnASCIIlp
	PUSH	BC
	CALL	PutASCIIline   ;Выводим	строку в буф и на экран
	POP	BC
	JR	C,FillASCIIdn  ;CY-Закончились байты для печати
	LD	A,B
	ADD	A,#08
	LD	B,A
	CP	#E4
	JR	NZ,PrnASCIIlp
	LD	HL,(TempShift)
	LD	(NextShift),HL
	LD	HL,(TempShift+2)
	LD	(NextShift+2),HL
	SUB	A
	LD	(EmptyLines),A
	RET 
;Процедура отчистки нижней области экрана
FillASCIIdn
	LD	A,#E4
	SUB	B
	LD	(FLenASC),A
	JR	Z,FASCIIe	;Z-нет отчистки
	LD	A,B
	LD	(FPosASC),A
	CALL	MakeWindow
	DEFB	#80
	DEFB	#02	;Head Place
	DEFW	#0000
FPosASC	DEFW	#0000
	DEFW	#0280
FLenASC	DEFW	#0000
	DEFB	PanelCol
	DEFB	#00
FASCIIe	LD	HL,(TempShift)
	LD	(NextShift),HL
	LD	HL,(TempShift+2)
	LD	(NextShift+2),HL
	LD	A,(FLenASC)
	SRL	A
	SRL	A
	SRL	A
	LD	(EmptyLines),A
	RET 
;Процедура печати тек.строки в буфер и на экран
PutASCIIline
	LD	HX,B
	LD	A,(ASCIImode)
	OR	A
	LD	C,#50
	JR	Z,$+4
	LD	C,#F0
	PUSH	BC
	LD	HL,(FileLenght)
	LD	BC,(TempShift)
	OR	A
	SBC	HL,BC
	EX	DE,HL
	LD	HL,(FileLenght+2)
	LD	BC,(TempShift+2)
	SBC	HL,BC
	POP	BC
	RET	C
	LD	B,#F0
	JR	NZ,PutLine
	LD	A,D
	OR	A
	JR	NZ,PutLine
	OR	E
	SCF 
	RET	Z
	LD	B,E

PutLine	LD	HL,LineBuffer
	IN	A,(PAGE1)
	PUSH	AF
	CALL	InitFPages
PutLnLoop
	CALL	TestFPages
	LD	A,(DE)
	INC	DE
	CP	#0D
	JR	NZ,PutLine1
	CALL	TestFPages
	LD	A,(DE)
	CP	#0A
	JR	NZ,PutLnExit
	INC	DE
	JR	PutLnExit
PutLine1
	CP	#0A
	JR	Z,PutLnExit
	CP	#09
	JR	NZ,PutLine2
PutTab	LD	(HL),#20
	INC	L
	LD	A,L
	CP	C
	JR	Z,PutLine3
	AND	#07
	JR	NZ,PutTab
	JR	PutLine3
PutLine2
	LD	(HL),A
	LD	A,L
	CP	C
	JR	Z,PutLine3
	INC	L
PutLine3
	DJNZ	PutLnLoop

	CALL	TestFPages
	LD	A,(DE)
	CP	#0D
	JR	NZ,PutLnExit
	INC	DE
	CALL	TestFPages
	LD	A,(DE)
	CP	#0A
	JR	NZ,PutLnExit
	INC	DE
PutLnExit
	POP	AF
	OUT	(PAGE1),A
	CALL	GetFPages
	LD	A,(ASCIImode)
	OR	A
	JR	NZ,PutLineUWR
	LD	A,#50
	SUB	L
	JR	Z,PutLine4
	LD	B,A
	LD	A,#20
	LD	(HL),A
	INC	L
	DJNZ	$-2
PutLine4
	LD	HL,LineBuffer
	LD	DE,#0000
	LD	B,#50
	LD	C,HX
	LD	A,PanelCol*#10+FileCol
	CALL	PrnTxtLnNormC
	OR	A
	RET 
PutLineUWR
	LD	C,HX
	LD	A,L
	LD	(SaveUW+1),A
	LD	A,(ASCIIaddX)
	ADD	A,#50
	SUB	L
	JR	Z,PutLnUW1
	JR	C,PutLnUW1
	LD	B,A
	LD	A,#20
	LD	(HL),A
	INC	L
	DJNZ	$-2
PutLnUW1
	LD	E,#00
	LD	B,#50
	LD	H,high LineBuffer
	LD	A,(ASCIIaddX)
	LD	L,A		;смещение от начала строки
	OR	A
	JR	Z,PutLnUW2
	PUSH	HL
	PUSH	BC
	LD	HL,SpaceLeft
	LD	D,#00
	LD	B,#01
	LD	A,PanelCol*#10+#03	;(Yellow)
	CALL	PrnTxtLnNormC
	POP	BC
	POP	HL
	INC	L
	DEC	B
	LD	A,(ASCIIaddX)
	LD	E,#08
PutLnUW2
	LD	D,A
SaveUW	LD	A,#00
	SUB	D
	JR	C,PutLnUW3
	CP	#51
	JR	C,PutLnUW3
	PUSH	HL
	PUSH	DE
	PUSH	BC
	LD	HL,SpaceRight
	LD	DE,#0278
	LD	B,#01
	LD	A,PanelCol*#10+#03	;(Yellow)
	CALL	PrnTxtLnNormC
	POP	BC
	POP	DE
	POP	HL
	DEC	B
PutLnUW3
	LD	D,#00
	LD	A,PanelCol*#10+FileCol	;(Yellow)
	CALL	PrnTxtLnNormC
	OR	A
	RET 
SpaceLeft
	DEFB	#1B
SpaceRight
	DEFB	#1A
