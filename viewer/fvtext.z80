ScrollLeft
	LD	A,(ASCIImode)
	OR	A
	RET	Z
	LD	A,(ASCIIaddX)
	OR	A
	RET	Z
	DEC	A
	LD	(ASCIIaddX),A
	CALL	PrnASCIIpage
	RET 
