InProcHex			;Проценты для Hex
	LD	HL,(FileLenght)
	LD	DE,(FileLenght+2)
	LD	BC,#0190
	OR	A
	SBC	HL,BC
	LD	BC,#0000
	EX	DE,HL
	SBC	HL,BC
