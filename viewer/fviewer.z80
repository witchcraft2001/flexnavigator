	RET	C
	LD	A,H
	OR	L
	OR	D
	OR	E
	RET	Z
;Процедура инициализации таблицы процентов
;На вход:
;	  DE+HL	- Длина	файла-1страница
InitProc
	PUSH	HL
	PUSH	DE
	EX	DE,HL
	LD	BC,100		;Длина файла/100 (%)
	CALL	Divis32
	LD	(Coeff1+1),DE	;Получаем кол-во байт на
	LD	(Coeff2+1),HL	;один процент
	LD	IX,ProcentTab
	LD	HL,#0000
	LD	E,L
	LD	D,H
	LD	BC,#6300	;Генерим таблицу
	LD	(IX+#00),L
	INC	IX
	LD	(IX+#00),H
	INC	IX
	LD	(IX+#00),E
	INC	IX
	LD	(IX+#00),D
	INC	IX
	LD	(IX+#00),C
	INC	IX
	INC	C
CoeffLoop			;для каждого процента
	PUSH	BC
Coeff1	LD	BC,#0000
	ADD	HL,BC
	LD	(IX+#00),L
	INC	IX
	LD	(IX+#00),H
	INC	IX
	EX	DE,HL
Coeff2	LD	BC,#0000
	ADC	HL,BC
	EX	DE,HL
	POP	BC
	LD	(IX+#00),E
	INC	IX
	LD	(IX+#00),D
	INC	IX
	LD	(IX+#00),C
	INC	IX
	INC	C
	DJNZ	CoeffLoop
	POP	DE
	POP	HL
	LD	(IX+#00),L	;Макс.процент
	INC	IX
	LD	(IX+#00),H
	INC	IX
	LD	(IX+#00),E
	INC	IX
	LD	(IX+#00),D
	INC	IX
	LD	(IX+#00),C
	SUB	A
	LD	(ProcFlag),A
	RET 
